<?xml version="1.0" encoding="utf8" standalone='yes'?>
<FORMX id="Antecedents_Medicaux_Infectieux" priority="3" access="formulaires_TM_général" phantom="y" closeAfterValid="y" dontPrintNavi="y">
<Libelle>Antécédents Médicaux Infectieux</Libelle>
<Objet>Fichier Médical Antécédents Infectieux</Objet>
<Groupe>Fichier Médical Antécédents</Groupe>

<ETAPE id="1">
	
	<Libelle>INFECTIEUX:</Libelle>

	<ITEM type="HIDDEN">
    <Libelle> </Libelle>
    <From>func:Init_Antecedents_Medicaux_Infectieux</From>
	</ITEM>
  
  <ITEM type="TXT" id="Val_IDENT_NomPatient" opt="y" resync="y" readonly="y">
		<Libelle>Nom</Libelle>
		<From>globalObject:patient->getNom()</From>
	</ITEM>
	
	<ITEM type="TXT" id="Val_IDENT_PrenomPatient" opt="y" resync="y" readonly="y">
		<Libelle>Prénom</Libelle>
		<From>globalObject:patient->getPrenom()</From>
	</ITEM>
	
	<ITEM type="TXT" id="Val_IDENT_SexePat" opt="y" resync="y" readonly="y">
		<Cond type="equal" oblig="y">
		  <Arg1>globalObject:patient->getSexe()</Arg1>
		  <Arg2>const:M</Arg2>
    </Cond>
    <Libelle>Sexe</Libelle>
		<From>const:Masculin</From>
	</ITEM>
	
	<ITEM type="TXT" id="Val_IDENT_SexePat" opt="y" resync="y" readonly="y">
		<Cond type="equal" oblig="y">
		  <Arg1>globalObject:patient->getSexe()</Arg1>
		  <Arg2>const:F</Arg2>
    </Cond>
    <Libelle>Sexe</Libelle>
		<From>const:Feminin</From>
	</ITEM>
	
	<ITEM type="TXT" id="Val_IDENT_DateNPat2" opt="y" resync="y" readonly="y">
      <Libelle>Date de naissance</Libelle>
      <From>func:GetDateE2</From>
	</ITEM>
	
	<ITEM type="TXT" id = "Val_IDENT_AgePat" opt="y" resync="y" readonly="y">
			<Libelle>Age</Libelle>
			<From>func:GetAge2</From>
	</ITEM>
	
	<ITEM type="TXT" id="Val_IDENT_AdressePat" opt="y" resync="y" readonly="y">
		  <Libelle>Adresse</Libelle>
      <From>globalObject:patient->getAdresse()</From>
	</ITEM>
	
	<ITEM type="TXT" id="Val_IDENT_CodePPat" opt="y" resync="y" readonly="y">
		  <Libelle>Code postal</Libelle>
      <From>globalObject:patient->getCodePostal()</From>
	</ITEM>
	
  <ITEM type="TXT" id="Val_IDENT_VillePat" opt="y" resync="y" readonly="y">
		  <Libelle>Ville</Libelle>
      <From>globalObject:patient->getVille()</From>
	</ITEM>
	
	<ITEM type="TXT" id="Val_IDENT_TelPat" opt="y" resync="y" readonly="y">
		  <Libelle>Téléphone</Libelle>
      <From>globalObject:patient->getTel()</From>
	</ITEM>
	
  <ITEM type="TXT" id="Val_IDENT_IDUPatient" opt="y" resync="y" readonly="y">
		<Libelle>IDU</Libelle>
		<From>globalObject:patient->getIDU()</From>
	</ITEM>
	
	<ITEM type="TXT" id="Val_IDENT_ILPPatient" opt="y" resync="y" readonly="y">
		<Libelle>ILP</Libelle>
		<From>globalObject:patient->getILP()</From>
	</ITEM>
	
	<ITEM type="TXT" id="Val_Docteur_Consultation" oblig="y" resync="y" readonly="y">
		<Libelle style="color:green;font-weight:bold;">Consultation du patient par le Docteur</Libelle>
		<From>func:GetDocteur</From>
	</ITEM>
  
  <ITEM type="CAL" default="today" id="Val_Jour_Consultation" oblig="y" histo="y">
		<Libelle style="color:green;">Jour de consultation du patient</Libelle>
	</ITEM>
	
	<ITEM type="TXT" id="Val_Heure_Consultation" oblig="y" histo="y">
		<Libelle style="color:green;">Heure de consultation du patient</Libelle>
		<From>func:GetTime</From>
	</ITEM>
  
  <ITEM type="RADIO" id="Val_INFECTIEUX_Tuberculose" onChangeReload="y" oblig="y" histo="y" link="L_Val_INFECTIEUX_Tuberculose">
		<Libelle style="color:green;">Tuberculose</Libelle>
		<FromList>list:Oui|Non</FromList>
		<From>var:L_Val_INFECTIEUX_Tuberculose</From>
	</ITEM>
	
	<ITEM type="LONGTXT" rows="2" id="Val_INFECTIEUX_Tuberculose_Comm" opt="y" histo="y" link="L_Val_INFECTIEUX_Tuberculose_Comm">
    <Cond type="equal" oblig="y">
      <Arg1>formVar:Val_INFECTIEUX_Tuberculose</Arg1>
      <Arg2>const:Oui</Arg2>
		</Cond>
    <Libelle>Tuberculose commentaire</Libelle>
		<From>var:L_Val_INFECTIEUX_Tuberculose_Comm</From>
	</ITEM>
	
  <ITEM type="RADIO" id="Val_INFECTIEUX_Hepatites" onChangeReload="y" oblig="y" histo="y" link="L_Val_INFECTIEUX_Hepatites">
    <Libelle style="color:green;">Hépatite(s)</Libelle>
		<FromList>list:Oui|Non</FromList>
		<From>var:L_Val_INFECTIEUX_Hepatites</From>
	</ITEM>
	
  <ITEM type="CHECK" id="Val_INFECTIEUX_Hepatites_Detail" opt="y" histo="y" link="L_Val_INFECTIEUX_Hepatites_Detail">
    <Cond type="equal" oblig="y">
      <Arg1>formVar:Val_INFECTIEUX_Hepatites</Arg1>
      <Arg2>const:Oui</Arg2>
		</Cond>
		<Libelle>Type hépatite(s)</Libelle>
		<FromList>list:A|B|C|Delta</FromList>
		<From>var:L_Val_INFECTIEUX_Hepatites_Detail</From>
	</ITEM>
	
  <ITEM type="RADIO" id="Val_INFECTIEUX_Paludisme" onChangeReload="y" oblig="y" histo="y" link="L_Val_INFECTIEUX_Paludisme">
		<Libelle style="color:green;">Paludisme</Libelle>
		<FromList>list:Oui|Non</FromList>
		<From>var:L_Val_INFECTIEUX_Paludisme</From>
	</ITEM>
	
  <ITEM type="LONGTXT" rows="2" id="Val_INFECTIEUX_Paludisme_Comm" opt="y" histo="y" link="L_Val_INFECTIEUX_Paludisme_Comm">
    <Cond type="equal" oblig="y">
      <Arg1>formVar:Val_INFECTIEUX_Paludisme</Arg1>
      <Arg2>const:Oui</Arg2>
		</Cond>
    <Libelle>Paludisme commentaire</Libelle>
		<From>var:L_Val_INFECTIEUX_Paludisme_Comm</From>
	</ITEM>
	
  <ITEM type="LONGTXT" rows="2" id="Val_INFECTIEUX_Autres" oblig="y" histo="y" link="L_Val_INFECTIEUX_Autres">
    <Libelle style="color:green;">Autres</Libelle>
		<From>var:L_Val_INFECTIEUX_Autres</From>
	</ITEM>
	
	<ITEM type="CHECK" id="Val_INFECTIEUX_Signer">
		<Libelle>Signature</Libelle>
		<FromList>list:Signer et Fermer ce formulaire</FromList>
	</ITEM>
	<ACTION type="trigger" id_formx="Dossier_Medical_Chronologique" />
	
</ETAPE>

</FORMX>


